{
  "compilerOptions": {
    "strict": true,
    "lib": ["es2022", "dom"],
    "module": "node20",
    "noImplicitOverride": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "rewriteRelativeImportExtensions": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDirs": ["src", "bin"],
    "outDir": "dist"
  },
  "exclude": ["tests", "dist"]
}
